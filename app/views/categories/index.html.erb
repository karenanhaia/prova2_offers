<h1>Categories</h1>
<%= link_to 'Nova Categoria', new_category_path, :class => "btn btn-success" %>
<br><br>

<table class="table">
  <thead>
  <tr>
    <th>Descrição</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.description %></td>
      <td>
        <div class="btn-group">
          <%= link_to 'Mostrar', category, :class => "btn btn-info" %></button>
          <%= link_to 'Editar', edit_category_path(category), :class => "btn btn-warning" %>
          <%= link_to 'Excluir', category, :class => "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %></button>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>