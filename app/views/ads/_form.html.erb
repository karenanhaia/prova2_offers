<%= form_with(model: ad, local: true) do |form| %>
  <% if ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% ad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <label>Título</label>
    <%= form.text_field :title, id: :ad_title, :class => "form-control" %>
  </div>

  <div class="field">
    <label>Descrição</label>
    <%= form.text_area :description, id: :ad_description, :class => "form-control" %>
  </div>

  <div class="field">
    <label>Preço</label>
    <%= form.text_field :price, id: :ad_price, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <label>Categoria</label>
    <%= form.select :category_id, Category.all.collect {|category| [category.description, category.id]}, :class => "form-control" %>
  </div>

  <div class="field">
    <label>Situação</label>
    <%= form.number_field :status, id: :ad_status, :class => "form-control" %>
  </div>

  <div class="field">
    <label>Fotos</label>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit submit_name, :class => "btn btn-success" %>
  </div>
<% end %>
